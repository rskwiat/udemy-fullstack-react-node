{
  rules: {
    indent: [
      2,
      {
        SwitchCase: 1
      },
    ],
    'comma-dangle': [
      2,
      'never',
    ],
    quotes: [
      2,
      'single',
    ],
    'linebreak-style': [
      2,
      'unix',
    ],
    semi: [
      2,
      'always',
    ],
    'no-empty': 2,
    'no-empty-function': 2,
    'arrow-parens': [
      2,
      'always',
    ],
    'eol-last': [
      2,
      'always',
    ],
  },
  env: {
    es6: true,
    node: true,
    browser: true,
    commonjs: true,
    mocha: true,
  },
  extends: ['eslint:recommended'],
}